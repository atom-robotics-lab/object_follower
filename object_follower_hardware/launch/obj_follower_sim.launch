<launch>
<arg name="x_pos" default="0.0" />
    <arg name="y_pos" default="0.0" />
    <arg name="z_pos" default="0.0213" />
    <arg name="yaw" default="2.44" />

    <include file="$(find mr_robot_description)/launch/display.launch">
        <arg name="rvizconfig" value="$(find object_follower_hardware)/rviz/obj_follower.rviz" />
    </include>
    <node args="-param robot_description -urdf -model mr_robot -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y $(arg yaw)" name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"/>


<include file="$(find gazebo_ros)/launch/empty_world.launch">
       <arg name="world_name" value="$(find object_follower_hardware)/worlds/bot_world.world"/> 
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>
<rosparam file="$(find object_follower_hardware)/config/object_follower.yaml" command="load" />
</launch>


